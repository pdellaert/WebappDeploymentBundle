{% extends "DellaertWebappDeploymentBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('ServerList') }}";
			}, 3000);
		</script>
		<h1>Server deleted: {{ entity.host }}</h1>
		<p>You will be returned to the server list in 3 seconds...</p>
	{% else %}
		<h1>Unknown server</h1>
		<p>The specified server is not available.</p>
	{% endif %}
{% endblock %}
