{% extends "DellaertWebappDeploymentBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
		<h1>Add application</h1>
		<form action="{{ path('ApplicationAdd') }}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
			<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Clear" /><a href="{{ path('ApplicationList') }}" class="button right delete">Cancel</a>
		</form>
	{% elseif entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('ApplicationList') }}";
			}, 3000);
		</script>
		<h1>Application added: {{ entity.name }}</h1>
		<p>You will be returned to the application list in 3 seconds...</p>
	{% endif %}
{% endblock %}
