{% extends "DellaertWebappDeploymentBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('ApplicationTemplateViewSlug',{ 'slug': entity.applicationTemplate.slug }) }}";
			}, 3000);
		</script>
		<h1>Application template parameter deleted: {{ entity.name }}</h1>
		<p>You will be returned to the application template in 3 seconds...</p>
	{% else %}
		<h1>Unknown application template parameter</h1>
		<p>The specified application template parameter is not available.</p>
	{% endif %}
{% endblock %}
