{% extends "DellaertWebappDeploymentBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
		<h1>Edit application template parameter: {{ entity.name }}</h1>
		<form action="{{ path('ApplicationTemplateParameterEdit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
			<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Reset" /><a href="{{ path('ApplicationTemplateParameterViewSlug',{ 'id': entity.id }) }}" class="button right delete">Cancel</a>
		</form>
	{% elseif entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('ApplicationTemplateParameterViewSlug',{ 'id': entity.id }) }}";
			}, 3000);
		</script>
		<h1>Application template parameter changed: {{ entity.name }}</h1>
		<p>You will be returned to the application template parameter's page in 3 seconds...</p>
	{% else %}
		<h1>Unknown application template parameter</h1>
		<p>The specified application template parameter is not available.</p>
	{% endif %}
{% endblock %}
