{% extends "DellaertWebappDeploymentBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
		<h1>Add deployment</h1>
		<form action="{{ path('DeploymentAdd', { 'id': id }) }}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
			<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Clear" /><a href="{{ path('ApplicationViewSlug',{ 'slug': entity.application.slug }) }}" class="button right delete">Cancel</a>
		</form>
	{% elseif entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('ApplicationViewSlug',{ 'slug': entity.application.slug }) }}";
			}, 3000);
		</script>
		<h1>Deployment added: {{ entity.hostname }}</h1>
		<p>You will be returned to the application in 3 seconds...</p>
	{% endif %}
{% endblock %}
